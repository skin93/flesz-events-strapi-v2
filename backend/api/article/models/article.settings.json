{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 80
    },
    "excerpt": {
      "type": "text",
      "maxLength": 255
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image_cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "writers": {
      "via": "articles",
      "collection": "writer"
    },
    "category": {
      "via": "articles",
      "model": "category"
    },
    "tags": {
      "via": "articles",
      "collection": "tag",
      "dominant": true
    },
    "metadata": {
      "type": "component",
      "repeatable": false,
      "component": "shared.metadata",
      "required": true
    },
    "related_articles": {
      "type": "component",
      "repeatable": false,
      "component": "articles.related-articles",
      "required": true
    }
  }
}
